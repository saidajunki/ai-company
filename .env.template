COMPANY_ID=alpha
BASE_DIR=/opt/apps/ai-company/data
HEARTBEAT_INTERVAL=180
REPORT_INTERVAL=600
DAILY_BRIEF_INTERVAL=86400

# === Slack連携 ===
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_CHANNEL_ID=C0AF21AFC14
CREATOR_SLACK_USER_ID=

# === LLM設定 ===
